{
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "lib": ["esnext", "DOM"],
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./build"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
