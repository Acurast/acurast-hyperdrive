{
  "name": "ibcf-protocol-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "truffle": "5.6.4",
    "@truffle/hdwallet-provider": "2.1.1",
    "web3": "1.8.0",
    "@openzeppelin/contracts": "3.4.0",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test --migrations_directory migrations_null",
    "deploy": "truffle deploy --network goerli --reset",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint:check": "turbo run lint -- 'src/**/*.{js,ts}'",
    "lint:fix": "turbo run lint -- 'src/**/*.{js,ts}' --quiet --fix",
    "prettier:check": "turbo run prettier -- --check 'src/**/*.{js,ts}'",
    "prettier:fix": "turbo run prettier -- --write 'src/**/*.{js,ts}'"
  }
}
